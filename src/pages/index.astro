---
import Layout from '../layouts/Layout.astro';
import HomePage from '../components/HomePage';
import SocialIcon from '../components/SocialIcon.astro';
import Card from '../components/Card.astro';
import CardOneliner from '../components/CardOneliner.astro';
import TypingTitleCompact from '../components/TypingTitleCompact.astro';

const Content = {
  seoDescription:
    "Peruvian-American designer & programmer based in Philadelphia, PA.",
};
---

<Layout title="Rolando" description="Peruvian-American engineer & designer based in Philadelphia, PA.">
    <main>
        <header class="hero-section">
          <img src="/avatar.png" alt="Rolando's avatar" class="mobile-avatar" />
          <span class="line line-1">Whimsical tools</span>
          <span class="line line-2" style="position: relative; left: 0.1em">for everyday life</span>
        </header>

        <Card href="https://shorthand.ink/" target="_blank" class="card-animate" size="medium" id="card-shorthand">
          <img src="/shorthand_snapshot.png" alt="Bleep's icon" style={{ width: "10vw", maxWidth: "200px", height: "auto", borderRadius: "10px", marginBottom: "1em"  }} />
            <CardOneliner title="ShortHand">Sync handwritten notes to Notion</CardOneliner>
        </Card>

        <Card href="https://bleep.is/" target="_blank" class="card-animate" size="medium" id="card-bleep">
          <img src="/bleep_icon.png" alt="Bleep's icon" style={{ width: "48px", height: "auto", borderRadius: "10px", marginBottom: "1em"  }} />
            <CardOneliner title="Bleep">Ultra-niche thoughtboard for creatives</CardOneliner>
        </Card>

        <Card href="https://ballpark.cc/" target="_blank" class="card-animate" size="medium" id="card-ballpark">
        <img src="/ballpark.png" alt="Coleure's icon" style={{ width: "10vw", maxWidth: "200px", height: "auto", borderRadius: "10px", marginBottom: "1em"  }} />
            <CardOneliner title="Ballpark">Retro-inspired networth tracker</CardOneliner>
        </Card>

        <Card href="https://coleure.rolando.is/" target="_blank" class="card-animate" size="medium" id="card-coleure">
        <img src="/coleure.png" alt="Coleure's icon" style={{ width: "10vw", maxWidth: "200px", height: "auto", borderRadius: "10px", marginBottom: "1em"  }} />
            <CardOneliner title="Coleure">Color mixer with curated colors</CardOneliner>
        </Card>

        <Card class="card-animate" size="xlarge" id="card-about">
          <img src="/avatar.png" alt="Rolando's avatar" style={{ width: "48px", height: "auto", borderRadius: "10px", marginBottom: "1em"  }} />
          <CardOneliner title="About me">Heyoo, I'm Rolando ðŸ‘‹</CardOneliner>
          <p style={{ fontSize: "0.9em", marginTop: "0.5em" }}>
            I create apps that help you slow down and<br />
            explore your thoughts. I'm based in Philly,<br />
            though originally from Peru &amp; Bolivia.
          </p>
          <p style={{ fontSize: "0.9em", marginTop: "0.5em" }}>
            When I'm not building, I'm probably watching<br />
            horror movies, playing Rocket League, or<br />
            riding Nitro at Six Flags.
          </p>
        </Card>

        <div class="card-row">
          <Card class="social-card card-animate" size="auto" style={{ display: "flex", alignItems: "center", justifyContent: "center", gap: "1em"}} id="card-social">
            <SocialIcon variant="threads" size={28} />
            <SocialIcon variant="x" size={28} />
            <SocialIcon variant="github" size={24} />
          </Card>

          <Card href="/typing" class="card-animate typing-card" size="auto" style={{ padding: "0.5em 1.25em"}} id="card-typing">
            <TypingTitleCompact />
          </Card>
        </div>
    </main>
</Layout>

<style>
  body {
    -webkit-user-select: none;
    user-select: none;
  }
  html, body {
    overflow: auto;
  }
  main {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  /* Card row for social and typing cards */
  .card-row {
    display: flex;
    gap: 1rem;
    width: 100%;
  }

  /* Desktop - card-row doesn't affect layout */
  @media (min-width: 769px) {
    .card-row {
      display: contents; /* Makes the wrapper disappear, children behave normally */
    }

    #card-social {
      flex-direction: column !important;
    }
  }

  /* Mobile layout - cards as list */
  @media (max-width: 768px) {
    main {
      padding: 0 1rem;
      padding-bottom: 2rem;
    }

    .card-row {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .card-row .card {
      flex: 1;
      margin-bottom: 0;
    }

    #card-social {
      flex-direction: row !important;
    }
  }
  .hero-section {
    font-size: 72px;
    font-weight: 300;
    line-height: 1.25;
    padding: 1em;
    font-family: 'Jugendreisen', system-ui, -apple-system, sans-serif;
    color: white;
    text-shadow:
      0 0 20px rgba(255, 255, 255, 0.6),
      0 0 40px rgba(255, 255, 255, 0.4),
      0 0 60px rgba(255, 255, 255, 0.3),
      0 0.025em 0 hsla(274, 62%, 79%, 1.0),
      0 8px 16px hsl(210, 51%, 5%);
  }

  /* Mobile avatar - hidden by default */
  .mobile-avatar {
    display: none;
  }

  /* Show avatar only on mobile */
  @media (max-width: 768px) {
    .mobile-avatar {
      display: block;
      width: 64px;
      height: 64px;
      border-radius: 50%;
      margin: 0 auto 1rem;
      margin-top: 10dvh;
      box-shadow: 0 0 1px rgba(255, 255, 255, 0.3), 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .hero-section {
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }

  .line {
    display: block;
    opacity: 0;
    animation: fadeInSlideUp 1.8s cubic-bezier(0.19, 1, 0.22, 1) forwards;
  }

  .line-1 {
    animation-delay: 0s;
  }

  .line-2 {
    animation-delay: 0.3s;
  }

  /* Remove animations on mobile */
  @media (max-width: 768px) {
    .line {
      opacity: 1;
      animation: none;
    }
  }

  @keyframes fadeInSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1200px) {
    .hero-section {
      font-size: 72px;
    }
  }
  @media (max-width: 756px) {
    .hero-section {
      font-size: 48px;
    }
  }
  @media (max-width: 512px) {
    .hero-section {
      font-size: 32px;
      text-align: center;
    }
  }
</style>

<style is:global>
  /* Card slide up animation */
  .card-animate {
    opacity: 0;
    transform: translateY(20px);
    animation: cardFadeInSlideUp 1.8s cubic-bezier(0.19, 1, 0.22, 1) forwards;
  }

  /* Disable card animations on mobile */
  @media (max-width: 768px) {
    .card-animate {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  /* Animation delays following the new card order */
  #card-shorthand {
    animation-delay: 0.5s;
  }

  #card-bleep {
    animation-delay: 0.7s;
  }

  #card-flow {
    animation-delay: 0.9s;
  }

  #card-ballpark {
    animation-delay: 1.1s;
  }

  #card-coleure {
    animation-delay: 1.3s;
  }

  #card-about {
    animation-delay: 1.5s;
  }

  #card-typing {
    animation-delay: 1.7s;
  }

  #card-social {
    animation-delay: 1.7s;  /* Same as typing since they're in the same row */
  }

  @keyframes cardFadeInSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .typing-card {
    position: relative;
    overflow: hidden;
  }

  .typing-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url('/night-background.jpg');
    background-size: cover;
    background-position: center;
    opacity: 0.6;
    z-index: 0;
  }

  .typing-card > * {
    position: relative;
    z-index: 1;
  }
</style>
